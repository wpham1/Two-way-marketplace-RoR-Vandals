<%# <p id="notice"><%= notice </p> %>


<p>
  <strong>Name:</strong>
  <%= @listing.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Size:</strong>
  <%= @listing.size %>
</p>

<p>
  <strong>Finish:</strong>
  <%= @listing.finish %>
</p>

<p>
  <strong>Username:</strong>
  <%# <%= @listing.user.username %>
  <%= link_to "#{@listing.user.username}", shop_index_path(params[:username]) %>
</p>

<p>
  <%= image_tag @listing.picture %>
</p>

<% if params[:username] == current_user.username %>
  <%= link_to 'Edit', edit_shop_path(current_user.username, @listing.id) %> |
  <%= link_to 'Back', shop_index_path(current_user.username) %>
<% else %>
<%= link_to 'Home', root_path %>
<% end %>

<% if current_user %>
  <%= link_to "favourite",   favourite_shop_path(@listing, type: "favourite"), method: :put %>
  <%= link_to "unfavourite", favourite_shop_path(@listing, type: "unfavourite"), method: :put %>
<% end %>

<button data-stripe="payment">Buy Sticker <%= number_to_currency(@listing.price) %></button>
<script src="https://js.stripe.com/v3/"></script>

<script>
    document.querySelector("[data-stripe='payment']").addEventListener("click", () => {
        const stripe = Stripe("<%= Rails.application.credentials.dig(:stripe, :public_key) %>");
        stripe.redirectToCheckout({
            sessionId: "<%= @session_id %>"
        });
    });
</script>