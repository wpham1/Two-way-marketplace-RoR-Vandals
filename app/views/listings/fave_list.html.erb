<h1><%= params[:username] %> Faves</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Size</th>
      <th>Finish</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.size %></td>
        <td><%= listing.finish %></td>
        <td><%= listing.user.username %></td>
        <td><%= link_to 'Show', shop_path(listing.user.username, listing.id) %></td>
        <% if params[:username] == current_user.username %>
          <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <%# <td><%= link_to 'Home', root_path %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

